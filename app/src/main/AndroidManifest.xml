<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andralung.musicalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MyPlaylist" android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.Artists" android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.Store" android:parentActivityName=".activities.Home" />
        <activity android:name=".activities.NowPlaying"  android:parentActivityName=".activities.MyPlaylist"/>
        <activity android:name=".activities.AddToPlaylist" android:parentActivityName=".activities.Artists" />
    </application>

</manifest>