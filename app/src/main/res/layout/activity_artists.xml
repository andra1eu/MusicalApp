<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andralung.musicalapp.activities.Artists">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artists_functionality"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/margin_between_related_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/margin_between_related_view"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:layout_marginRight="@dimen/margin_between_related_view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_between_related_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/list_albums" />

    <ListView
        android:id="@+id/list_albums"
        android:layout_width="338dp"
        android:layout_height="352dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_between_related_view"
        android:layout_marginRight="@dimen/margin_between_related_view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_between_related_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.496">

    </ListView>


</android.support.constraint.ConstraintLayout>
